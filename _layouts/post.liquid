---
layout: default
---

<style>
  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }
  .post-title {
    font-size: 2rem;
    font-weight: 400;
    color: var(--color-black);
    margin-bottom: 1rem;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }
  .post-meta {
    font-size: 0.875rem;
    color: var(--color-light-gray);
    margin-bottom: 1rem;
  }
  .post-description {
    font-size: 1.0625rem;
    color: var(--color-gray);
    font-style: italic;
    margin-top: 0.75rem;
    line-height: 1.6;
  }
  .post-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--color-charcoal);
    max-width: 650px;
  }
  .post-content h2 {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-dark);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
  }
  .post-content h3 {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-dark);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  .post-content p {
    margin-bottom: 1.5rem;
  }
  .post-content strong,
  .post-content b {
    color: var(--color-black);
    font-weight: 500;
  }
  .post-content code {
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border);
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Mono', 'Courier New', monospace;
    font-size: 0.9em;
    color: var(--color-dark);
  }
  .post-content pre {
    background: var(--color-bg-subtle);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 1.25rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  .post-content pre code {
    background: none;
    padding: 0;
    border: none;
    color: var(--color-charcoal);
  }
  .post-content ul, .post-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  .post-content li {
    margin-bottom: 0.5rem;
  }
  .post-content blockquote {
    border-left: 3px solid var(--color-black);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--color-gray);
    font-style: italic;
  }
  .post-content a {
    color: var(--color-black);
    text-decoration: underline;
    text-decoration-color: var(--color-border);
    text-underline-offset: 3px;
    transition: text-decoration-color 0.2s;
  }
  .post-content a:hover {
    text-decoration-color: var(--color-black);
  }
  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }
  .back-link {
    color: var(--color-black);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }
  .back-link:hover {
    color: var(--color-gray);
    text-decoration: underline;
  }
</style>

<article class="post">
  <header class="post-header">
    <div class="post-meta">
      {{ page.date | date: "%B %d, %Y" }}
      {% if page.categories %}
        • {% for category in page.categories %}{{ category }}{% unless forloop.last %}, {% endunless %}{% endfor %}
      {% endif %}
    </div>
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content }}
  </div>

  <footer class="post-footer">
    <a href="{{ '/tech/' | relative_url }}" class="back-link">← Back to Tech posts</a>
  </footer>
</article>
