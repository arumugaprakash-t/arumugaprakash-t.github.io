---
layout: default
---

<style>
  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e5e5e5;
  }
  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }
  .post-meta {
    font-size: 0.95rem;
    color: #6c757d;
    margin-bottom: 0.5rem;
  }
  .post-description {
    font-size: 1.15rem;
    color: #444;
    font-style: italic;
    margin-top: 0.5rem;
  }
  .post-content {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #333;
  }
  .post-content h2 {
    font-size: 1.75rem;
    font-weight: 600;
    color: #dc3545;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .post-content h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #2c3e50;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  .post-content p {
    margin-bottom: 1.5rem;
  }
  .post-content strong {
    color: #2c3e50;
    font-weight: 600;
  }
  .post-content code {
    background: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    color: #dc3545;
  }
  .post-content pre {
    background: #f8f8f8;
    border: 1px solid #e5e5e5;
    border-radius: 6px;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  .post-content pre code {
    background: none;
    padding: 0;
    color: #333;
  }
  .post-content ul, .post-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  .post-content li {
    margin-bottom: 0.5rem;
  }
  .post-content blockquote {
    border-left: 4px solid #dc3545;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #555;
    font-style: italic;
  }
  .post-content a {
    color: #dc3545;
    text-decoration: none;
  }
  .post-content a:hover {
    text-decoration: underline;
  }
  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
  }
  .back-link {
    color: #dc3545;
    text-decoration: none;
    font-weight: 500;
  }
  .back-link:hover {
    text-decoration: underline;
  }
</style>

<article class="post">
  <header class="post-header">
    <div class="post-meta">
      {{ page.date | date: "%B %d, %Y" }}
      {% if page.categories %}
        • {% for category in page.categories %}{{ category }}{% unless forloop.last %}, {% endunless %}{% endfor %}
      {% endif %}
    </div>
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <div class="post-content">
    {{ content }}
  </div>

  <footer class="post-footer">
    <a href="{{ '/tech/' | relative_url }}" class="back-link">← Back to Tech posts</a>
  </footer>
</article>
