---
layout: default
---

<style>
  .hero-section {
    margin-bottom: 3rem;
  }
  .hero-title {
    font-size: 3.25rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.75rem;
    letter-spacing: -0.03em;
    line-height: 1.2;
  }
  .hero-subtitle {
    font-size: 1.35rem;
    color: #dc3545;
    font-weight: 600;
    margin-bottom: 0;
  }
  .intro-text {
    font-size: 1.125rem;
    line-height: 1.9;
    color: #444;
  }
  .intro-text p {
    margin-bottom: 1.75rem;
  }
  .intro-text p:last-child {
    margin-bottom: 0;
  }
  .intro-text strong {
    color: #2c3e50;
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 2.5rem;
    }
    .hero-subtitle {
      font-size: 1.15rem;
    }
    .intro-text {
      font-size: 1.05rem;
    }
  }
</style>

<div class="about">
  <div class="hero-section">
    <h1 class="hero-title">Hey I'm Prakash</h1>
    <p class="hero-subtitle">{{ page.subtitle }}</p>
  </div>

  <div class="content">
    {{ content }}
  </div>
</div>
