---
layout: default
---

<style>
  .hero-section {
    margin-bottom: 3rem;
  }
  .hero-title {
    font-size: 3.25rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.75rem;
    letter-spacing: -0.03em;
    line-height: 1.2;
  }
  .hero-subtitle {
    font-size: 1.35rem;
    color: #dc3545;
    font-weight: 600;
    margin-bottom: 0;
  }
  .intro-text {
    font-size: 1.125rem;
    line-height: 1.9;
    color: #444;
  }
  .intro-text p {
    margin-bottom: 1.75rem;
  }
  .intro-text p:last-child {
    margin-bottom: 0;
  }
  .intro-text strong {
    color: #2c3e50;
    font-weight: 600;
  }

  @media (max-width: 600px) {
    .hero-title {
      font-size: 2.5rem;
    }
    .hero-subtitle {
      font-size: 1.15rem;
    }
    .intro-text {
      font-size: 1.05rem;
    }
  }

  /* Latest Blog Posts Section */
  .latest-posts-section {
    margin-top: 3rem;
    padding-top: 2.5rem;
    border-top: 2px solid #e5e5e5;
  }
  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }
  .recent-posts-list {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }
  .recent-post-item {
    margin-bottom: 0;
    border-bottom: 1px solid #e5e5e5;
  }
  .recent-post-item:last-child {
    border-bottom: none;
  }
  .recent-post-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 1rem 0;
    text-decoration: none;
    transition: all 0.2s ease;
    gap: 1rem;
  }
  .recent-post-link:hover {
    background-color: #f8f9fa;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    margin-left: -0.75rem;
    margin-right: -0.75rem;
    border-radius: 4px;
  }
  .post-title-text {
    font-size: 1.125rem;
    font-weight: 600;
    color: #2c3e50;
    flex: 1;
    line-height: 1.5;
  }
  .recent-post-link:hover .post-title-text {
    color: #dc3545;
  }
  .post-date-text {
    font-size: 0.9rem;
    color: #6c757d;
    white-space: nowrap;
    flex-shrink: 0;
  }
  .view-all-link {
    display: inline-block;
    color: #dc3545;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    margin-top: 0.5rem;
    transition: color 0.2s;
  }
  .view-all-link:hover {
    color: #c82333;
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .section-title {
      font-size: 1.5rem;
    }
    .recent-post-link {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
    .post-title-text {
      font-size: 1.05rem;
    }
    .post-date-text {
      font-size: 0.85rem;
    }
  }
</style>

<div class="about">
  <div class="hero-section">
    <h1 class="hero-title">Hey I'm Prakash</h1>
    <p class="hero-subtitle">{{ page.subtitle }}</p>
  </div>

  <div class="content">
    {{ content }}
  </div>

  <!-- Latest Blog Posts Section -->
  <div class="latest-posts-section">
    <h2 class="section-title">Latest Blog Posts</h2>
    <ul class="recent-posts-list">
      {% assign tech_posts = site.posts | where_exp: "post", "post.categories contains 'tech' or post.categories contains 'databases'" %}
      {% for post in tech_posts limit:4 %}
        <li class="recent-post-item">
          <a href="{{ post.url | relative_url }}" class="recent-post-link">
            <span class="post-title-text">{{ post.title }}</span>
            <span class="post-date-text">{{ post.date | date: "%B %d, %Y" }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
    <a href="{{ '/tech/' | relative_url }}" class="view-all-link">View all posts â†’</a>
  </div>
</div>
